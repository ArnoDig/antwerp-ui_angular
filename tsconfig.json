{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./out-tsc",
    "baseUrl": "src",
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "paths": {
        "@acpaas-ui/ngx-layout": [ "packages/layout/src" ],
        "@acpaas-ui/ngx-utils": [ "packages/utils/src" ],
        "@acpaas-ui/ngx-pagination": [ "packages/pagination/src" ],
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
